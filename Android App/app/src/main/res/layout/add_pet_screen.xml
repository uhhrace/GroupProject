<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft = "15dp"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- TODO low priority
         Allow user to change this image to a picture of their pet which will show up on other screens -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom ="60dp"
            app:srcCompat="@drawable/icon_pet_list" />

        <TextView
            android:id="@+id/petInformationTextView"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="    Enter your pets information"
            android:layout_gravity="center"
            android:fontFamily="@font/rubik_medium"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addPetNameTextView"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Name"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addLizardNameText"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:autofillHints="Pet Name"
                android:fontFamily="@font/rubik_medium"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addLizardBirthdayTextView"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Date of Birth"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addLizardDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="MM/DD/YYYY"
                android:inputType="textPersonName"
                android:fontFamily="@font/rubik_medium"
                android:textSize="25sp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/rounded_corner_inactive"


            android:fontFamily="@font/rubik_medium"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/buttonDarkBlue"
            android:textSize="25dp"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>


</RelativeLayout>




