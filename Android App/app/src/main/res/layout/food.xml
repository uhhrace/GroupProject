<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TypeLeafyGreens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:text="Leafy Greens"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ColGreensText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:text="Collard Greens"
                    android:textColor="@color/buttonDarkBlue"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/toggleColGreens"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/MustardGreensText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Mustard Greens" />

                <ToggleButton
                    android:id="@+id/toggleMustardGreens"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/RomaineText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Romaine" />

                <ToggleButton
                    android:id="@+id/toggleRomaine"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/DandelionText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Dandelion" />

                <ToggleButton
                    android:id="@+id/toggleDandelion"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/TurnipGreensText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Turnip Greens" />

                <ToggleButton
                    android:id="@+id/toggleTurnipGreens"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/BokChoyText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Bok Choy" />

                <ToggleButton
                    android:id="@+id/toggleBokChoy"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/ChicoryText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Chicory" />

                <ToggleButton
                    android:id="@+id/toggleChicory"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/EscaroleText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Escarole" />

                <ToggleButton
                    android:id="@+id/toggleEscarole"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/WildPlantsText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Wild Plants" />

                <ToggleButton
                    android:id="@+id/toggleWildPlants"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/CilantroText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Cilantro" />

                <ToggleButton
                    android:id="@+id/toggleCilantro"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/WatercressText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Watercress" />

                <ToggleButton
                    android:id="@+id/toggleWatercress"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/GrapeLeavesText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Grape Leaves" />

                <ToggleButton
                    android:id="@+id/toggleGrapeLeaves"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toogle_selector"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>