<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/LettuceText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Mealworm" />

                <ToggleButton
                    android:id="@+id/toggleLettuce"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/toogle_selector"
                    android:text="Lettuce"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner_inactive">

                <TextView
                    android:id="@+id/MealwormText"
                    android:textColor="@color/buttonDarkBlue"
                    android:fontFamily="@font/rubik_medium"
                    android:paddingHorizontal="25dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"

                    android:text="Lettuce" />

                <ToggleButton
                    android:id="@+id/toggleMealworm"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/toogle_selector"
                    android:text="ToggleButton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>